<h1>Cat Rental Form</h1>

<form action="<%= cat_rental_requests_url %>" method="post">

  <select name="cat_rental_request[cat_id]">
    <option></option>
    <% @all_cats.each do |cat| %>
      <option value="<%= cat.id %>">
        <%= cat.name %>
      </option>
    <% end %>
  </select>

  <p>Start date:</p>
  <p><input type="date" name="cat_rental_request[start_date]"></p>

  <p>End date:</p>
  <p><input type="date" name="cat_rental_request[end_date]"></p>
  <input type="submit">
</form>
