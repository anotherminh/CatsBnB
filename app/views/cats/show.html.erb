<h1><%= @cat.name %></h1>
<%= link_to "Back to index", cats_url %>

<table>
  <tr>
    <td>Birthdate</td><td> <%= @cat.birth_date %> </td>
  </tr>
  <tr>
    <td>Color</td><td> <%= @cat.color %> </td>
  </tr>
  <tr>
    <td>Sex</td><td> <%= @cat.sex %> </td>
  </tr>
  <tr>
    <td>Description</td><td> <%= @cat.description %> </td>
  </tr>
</table>

<p>Reservations</p>
<%= link_to "Make a reservation", new_cat_rental_request_url %> </br>
<% @cat.cat_rental_requests.each do |rental| %>

  <% if rental.pending? %>

    <%= button_to "approve", approve_cat_rental_request_url(rental) %>
    <%= button_to "deny", deny_cat_rental_request_url(rental) %>

  <% end %>

  <table>
    <tr>
      <td>Start Date</td><td><%= rental.start_date %></td>
    </tr>
    <tr>
      <td>End Date</td><td><%= rental.end_date %></td>
    </tr>
    <tr>
      <td>Status</td><td><%= rental.status %></td>
    </tr>
  </table>

<% end %>

<%= link_to "Edit Cat", edit_cat_url(@cat), method: :get %>
<%= button_to "Delete Cat", cat_url(@cat), method: :delete %>
